<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_white_radius"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin5"
        android:padding="@dimen/padding15"
        android:text="Select Attachment"
        android:textColor="@color/black"
        android:textSize="@dimen/heading_text"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:padding="@dimen/padding15"
        android:gravity="center"
        android:text="Take a new moment from"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="@dimen/margin45"
            android:layout_height="@dimen/margin45"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_weight="1"
            android:src="@drawable/camera_maker" />

        <ImageView
            android:id="@+id/record_video"
            android:layout_width="@dimen/margin45"
            android:layout_height="@dimen/margin45"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_weight="1"
            android:src="@drawable/video_maker" />

    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_marginTop="@dimen/margin10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin10"
        android:padding="@dimen/padding15"
        android:text="@string/from_your_device_s_gallery"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gallery_image"
            android:layout_width="@dimen/margin45"
            android:layout_height="@dimen/margin45"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_weight="1"
            android:src="@drawable/gallery_photo" />

        <ImageView
            android:id="@+id/gallery_video"
            android:layout_width="@dimen/margin45"
            android:layout_height="@dimen/margin45"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_weight="1"
            android:src="@drawable/video_upload" />

    </LinearLayout>

</LinearLayout>