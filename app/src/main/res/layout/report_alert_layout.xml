<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_white_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/report_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin5"
        android:gravity="center"
        android:padding="@dimen/padding15"
        android:text="Report this post"
        android:textColor="@color/black"
        android:textSize="@dimen/heading_text"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_text" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin15"
        android:hint="Write here"
        android:textColorHint="@color/app_color"
        app:hintTextAppearance="@style/TextLabel">

        <EditText
            android:id="@+id/report_message"
            style="@style/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="4"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/normal_text" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/report_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin20"
        android:background="@drawable/corner_background3"
        android:gravity="center"
        android:padding="@dimen/padding15"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text" />

</LinearLayout>