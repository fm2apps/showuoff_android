<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/select_user_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin3"
        android:padding="@dimen/padding7">

        <RelativeLayout
            android:id="@+id/dummy_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/margin2">

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/margin55"
                        android:layout_height="@dimen/margin55"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/noimage"
                        app:riv_corner_radius="@dimen/margin5" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin8"
            android:layout_toRightOf="@+id/dummy_data"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="John Smith"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="john@gmail.com"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="@dimen/margin80"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/margin4"
            app:cardElevation="@dimen/margin2">

            <TextView
                android:id="@+id/share_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corner_background"
                android:gravity="center"
                android:padding="@dimen/padding7"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/gray_text" />

</LinearLayout>