<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mediadata.CustomCamera">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image60"
        android:background="#17292929"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="@dimen/margin15"
            android:layout_alignParentEnd="true"
            android:id="@+id/flash"
            android:layout_width="@dimen/margin30"
            android:layout_height="@dimen/margin30"
            android:src="@drawable/flash_on" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/captureImage"
        android:layout_width="@dimen/margin45"
        android:layout_height="@dimen/margin45"
        android:layout_above="@+id/filter_list"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin10"
        android:src="@drawable/circle_shape_outline" />

    <RelativeLayout
        android:gravity="center"
        android:id="@+id/filter_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin80"
        android:layout_alignParentBottom="true"
        android:background="#4b292929"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flipCamera"
            android:layout_width="@dimen/margin50"
            android:layout_height="@dimen/margin50"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin10"
            android:src="@drawable/rotate" />

        <ImageView
            android:id="@+id/gallery_image"
            android:layout_width="@dimen/margin45"
            android:layout_height="@dimen/margin45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin25"
            android:layout_toRightOf="@+id/flipCamera"
            android:src="@drawable/gallery_white" />

        <ImageView
            android:id="@+id/record_video"
            android:layout_width="@dimen/margin45"
            android:layout_height="@dimen/margin45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin25"
            android:layout_toRightOf="@+id/gallery_image"
            android:src="@drawable/video_maker_white" />

        <ImageView
            android:id="@+id/gallery_video"
            android:layout_width="@dimen/margin45"
            android:layout_height="@dimen/margin45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin25"
            android:layout_toRightOf="@+id/record_video"
            android:src="@drawable/video_upload_white" />

    </RelativeLayout>

</RelativeLayout>